@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class=" col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp Create a New Category
             </a>
        </div>
       
    </div>

    <br/> <br/>

    <table class="table table-bordered table-striped table-dark" style="width:100%">
    <thead>
        <tr>
            <th>
             Category Name
            </th>
            <th>
              Display Order
            </th>
            <th>
              Date and Time Created
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
           <tr>
               <td width="30%">
                @obj.Name
               </td>
          
                <td width="30%">
                    @obj.DisplayOrder
                </td>
         
                <td width="30%">
                    @obj.CreatedDateTime
                </td>
                <td width="50%">
                    <div class="w-100 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

</div>